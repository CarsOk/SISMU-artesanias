<main class="main_index"> 
  <div class="panelContador">
    <div class="panerContador_div">
      <div class="panelContador_count sombra" id="pro_fondo">
        <span class="span_angulo_derecho">
          <h2><%= Producto.count %></h2>
        </span>
        <span>
        <h3>PRODUCTOS</h3>
        </span>
      </div>
      <div class="panelContador__elemento sombra">
        <div class="panelContador__contador">
          <span class="span_angulo_derecho">
            <h2><%= Producto.count %></h2>
          </span>
          <span>Nuevos <br> Productos</span>
        </div>
        <div class="panelContador__icono_producto">
          <span class="span_angulo_derecho">
            <%= image_tag "iconos/lista_blanca", class: "minilogo_grid" %>
          </span>
        </div>
      </div>
    </div>

    <div class="panerContador_div">
      <div class="panelContador_count sombra" id="emp_fondo">
        <span class="span_angulo_derecho">
          <h2><%= Empresa.count %></h2>
        </span>
        <span>
        <h3>EMPRESAS</h3>
        </span>
      </div>
      <div class="panelContador__elemento sombra">
        <div class="panelContador__contador">
          <span class="span_angulo_derecho">
            <h2><%= Empresa.count %></h2>
          </span>
          <span>Nuevas <br> Empresas</span>
        </div>
        <div class="panelContador__icono_empresa">
          <span class="span_angulo_derecho">
            <%= image_tag "iconos/edificio", class: "minilogo_grid" %>
          </span>
        </div>
      </div>
    </div>

    <div class="panerContador_div">
      <div class="panelContador_count sombra" id="cli_fondo">
        <span class="span_angulo_derecho">
          <h2><%= Client.count %></h2>
        </span>
        <span>
        <h3>CLIENTES</h3>
        </span>
      </div>
      <div class="panelContador__elemento sombra">
        <div class="panelContador__contador">
          <span class="span_angulo_derecho">
            <h2><%= Client.count %></h2>
          </span>
          <span>Nuevos <br> Clientes</span>
        </div>
        <div class="panelContador__icono_cliente">
          <span class="span_angulo_derecho">
            <%= image_tag "iconos/usuarios_blanco", class: "minilogo_grid" %>
          </span>
        </div>
      </div>
    </div>

    <div class="panerContador_div">
      <div class="panelContador_count sombra" id="art_fondo">
        <span class="span_angulo_derecho">
          <h2><%= Artesano.count %></h2>
        </span>
        <span>
        <h3>ARTESANOS</h3>
        </span>
      </div>
      <div class="panelContador__elemento sombra">
        <div class="panelContador__contador">
          <span class="span_angulo_derecho">
            <h2><%= Artesano.count %></h2>
          </span>
          <span>Nuevos <br> Artesanos</span>
        </div>
        <div class="panelContador__icono_artesano">
          <span class="span_angulo_derecho">
            <%= image_tag "iconos/artesanos_blanco", class: "minilogo_grid" %>
          </span>
        </div>
      </div>
    </div>
  </div>

  <%# SEPARADOR %>
  <p>
    
  </p>
  <p>
   
  </p>
  <div class="panelRegistros">
    <div class="panelRegistros__elemento sombra" id="pro">
      <h4>Productos Añadidos Recientemente</h4>
      <table>
          <thead>
              <tr >
                  <th>Referencia</th>
                  <th>Nombre del producto</th>
                  <th>Precio</th>
              </tr>
          </thead>
          <tbody>
            <% @productos.each do |producto| %>
              <tr>
                  <td><%= producto.referencia_pro %></td>
                  <td><%= producto.nombre_pro %></td>
                  <td><%= number_to_currency producto.precio_pro%></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
    <div class="panelRegistros__elemento sombra" id="cli">
      <h4>Clientes Añadidos Recientemente</h4>
      <table>
        <thead>
          <tr>
            <th>Cedula</th>
            <th>Primer Nombre</th>
            <th>Primer Apelldio</th>
          </tr>
        </thead>
        <tbody>
          <% @clients.each do |client| %>
              <tr>
                <td><%= client.id %> </td> 
                <td><%= client.nombre_cli %></td> 
                <td><%= client.apellido_cli %></td> 
              </tr>
            <% end %>
         
        </tbody>
      </table>
    </div>
    <div class="panelRegistros__elemento sombra" id="art">
      <h4>Artesanos Añadidos Recientemente</h4>
      <table>
        <thead>
          <tr>
            <th>Cedula</th>
            <th>Primer Nombre</th>
            <th>Primer Apelldio</th>
       
          </tr>
        </thead>
        <tbody>
          <% @artesanos.each do |artesano| %>
              <tr>
                <td><%= artesano.id %></td> 
                <td><%= artesano.nombre %></td> 
                <td><%= artesano.apellido %></td> 
              </tr>
            <% end %>
         
        </tbody>
      </table>
    </div> 
  </div>
  
</main>