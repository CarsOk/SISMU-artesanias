
<div class="containerPro">
  <h1 class="containerPro_text" >Crear Productos</h1>
  <div class="formulario">
      <%= simple_form_for @producto do |f| %> <br>
        <%= f.label :referencia_pro, 'Referencia: ', class: 'left' %> <br>
        <%= f.input_field :referencia_pro %> <br>
        <%= f.label :nombre_pro,'Nombre del producto: ' %> <br>
        <%= f.input_field :nombre_pro %> <br>
        <%= f.label :precio_pro, 'Precio del producto: ' %> <br>
        <%= f.input_field :precio_pro %> <br>
        <%= f.association :categories, label: 'Categoria:' , as: :check_boxes, label_method: :tipo_categoria %> 
        <div><%= f.button :submit, 'Actualizar', class: "formulario_boton" %></div>
        <br>
      <% end %>
  </div>
</div>
