<tr>
  <td data-label="Referencia", class="centrar blue">
    <%= producto.referencia_pro %>
  </td>

  <td data-label="Nombre del producto" class="centrar blue">
    <%= producto.nombre_pro%>
  </td id="aw">

 <td data-label= "Ca" class="blue">
    <% producto.categories.each do |c| %>
      <%= c.tipo_categoria%>
    <%end%>
  </td>  

  <td data-label= "Precio" class="blue">
    <%= number_to_currency(producto.precio_pro, unit: 'COL$', class: "black") %>
  </td>

  <td data-label="Accion" class="botones blue">
    <%= link_to edit_producto_url(producto) do %>
      
      <button class="editar">Editar</button>
    <% end %>
  
    <%= button_to "Eliminar", producto_path(producto), method: :delete, class: "btn_borrar, eliminar", onclick: "return confirmDestroy('Â¿Deseas eliminar este producto?')" %>

    
  </td>
</tr>

<script>
  function confirmDestroy(message) {
    if(!confirm(message)){
      return false
    }
  }
</script>