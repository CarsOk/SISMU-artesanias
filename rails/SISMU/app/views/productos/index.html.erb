<main class="container sombra">
    <section class="productos">
        <div class="box">
            <%= form_tag productos_path, :method => 'get' do %>
              <p>
                <%= text_field_tag :search, params[:search] %>
                <%= submit_tag "Buscar", :referencia_pro => nil  %>
              </p>
            <% end %>
        </div>
        <h1 class="productos__titulo">Productos</h1>
        <div class="productos__nuevo">
            <%= link_to "productos/new" do %>
            <p>Nuevo</p>
            <% end %>
        </div>    
    </section>
    
    <section class= "productosTable">
      <table>
        <thead>
          <tr>
            <th>Referencia</th>
            <th>Nombre del producto</th>
            <th>Precio</th>
            <th colspan="3">Acci√≥n</th>
          </tr>
        </thead>
        <tbody>
          <%= render @productos  %>
        </tbody>
      </table>
  </section>

  <div class="digg_pagination">
    <%= will_paginate(@productos,:previous_label => "&laquo;", :next_label => "&raquo;",:class=>"small-font",:outer_window => 1,:inner_window => 0) %>
  </div>

</main>