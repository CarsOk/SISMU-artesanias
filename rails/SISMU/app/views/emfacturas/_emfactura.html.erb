<tr>
  <td class="centrar">
    <%= link_to emfactura.id, emfactura_url(emfactura.id) %>
  </td>
  <td>
    <%= emfactura.empresa.nombre %>
  </td>
  <td class="centrar">
    <%= emfactura.created_at %>
  </td>
  <td class="centrar">
    <%= link_to emfactura_url(emfactura) do %>
      <%= image_tag("iconos/ojo", class:"icon_accion") %>
    <% end %>
  </td>
  <td class="centrar">
    <%= button_to emfactura_path(emfactura), method: :delete, class: "btn_borrar", form: {data: {turbo_confirm: '¿Estás seguro?' }} do %>
      <%= image_tag("iconos/borrar", class:"icon_accion") %>
    <% end %>
  </td>
</tr>