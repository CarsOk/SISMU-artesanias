<main class="container sombra">
    <section class="productos">
        <%# image_tag("iconos/empresa", class: "icon_logo_title") %>
        <div class="box">
            <%= form_tag empresas_path, :method => 'get' do %>
                <p>
                    <%= text_field_tag :search, params[:search] %>
                    <%= submit_tag "Buscar", :id => nil  %>
                </p>
            <% end %>
        </div>
        <h1 class="empresas__titulo">Empresa</h1>
        <div class="empresas__nuevo">
            <%= link_to "empresas/new" do %>
                <p>Nuevo</p>
            <% end %>
        </div>
    </section>
    <section class="empresasTable">
        <table>
            <thead>
                <tr>
                <th>Nit</th>
                <th>Nombre Empresa</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th colspan="3">Acción</th>
                </tr>
            </thead>
            <tbody>
                <%= render @empresas%>
            </tbody>
            </table>
    </section>
    <div class="digg_pagination">
        <%= will_paginate(@empresas,:previous_label => "&laquo;", :next_label => "&raquo;",:class=>"small-font",:outer_window => 1,:inner_window => 0) %>
    </div>
</main>