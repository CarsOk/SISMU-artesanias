<main class="container">
  <section class="containerInfo">
    <%# image_tag("iconos/empresa", class: "icon_logo_title") %>
    <div class="box">
      <form class="container-4">
        <span class="icon"><%= image_tag("iconos/buscar", class:"icon") %></span>
        <input name="q" <%= @q %> type="search" id="search" placeholder="Buscar..." />
      </form>
    </div>
    <h1 class="containerInfo__titulo">Empresa</h1>
    <div class="icon_nuevo">
      <%= link_to "empresas/new" do %>
        <span>Nuevo</span>
        <%= image_tag("iconos/mas", class: "icon_mas") %>
      <% end %>
    </div>
  </section>
  <section class="containerTable">
    <table>
      <thead>
        <tr>
          <th>Nit</th>
          <th>Nombre Empresa</th>
          <th>Teléfono</th>
          <th>Dirección</th>
          <th colspan="3">Acción</th>
        </tr>
      </thead>
      <tbody>
        <%= render @empresas%>
      </tbody>
    </table>
  </section>

</main>