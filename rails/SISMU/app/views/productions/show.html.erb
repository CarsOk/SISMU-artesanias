
<%= simple_form_for [@production, @dproduction] do |f| %>
    <%= f.association :producto, label_method: :nombre_pro, label: "nombre del producto: " %>
    <%= f.association :artesano, label_method: :nombre_completo, label: "nombre del artesano: " %>
    <%= f.input :cantidad, label: "cantidad:" %>

    <%= f.button :submit %>
    

<% end %>

