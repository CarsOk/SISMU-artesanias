<main class="container">
  <section class=" containerInfo">
    <%= image_tag("iconos/producto", class: "icon_logo_title") %>
    <h1 class=" containerInfo__titulo">Facturas</h1>
    <div class="icon_nuevo">
      <%= link_to "facturas/new" do %>
        <span>Nuevo</span>
        <%= image_tag("iconos/mas", class: "icon_mas") %>
      <% end %>
    </div>
  </section>

  <section class="containerTable">
    <table>
      <thead>
        <tr>
          <th>N° Factura</th>
          <th>Nombre</th>
          <th>Correo</th>
          <th>Fecha de creación</th>
          <th colspan="3">Acción</th>
        </tr>
      </thead>
      <tbody>
        <%= render @facturas %>
      </tbody>

    </table>
  </section>

</main>