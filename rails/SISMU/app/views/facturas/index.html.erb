<main class="container sombra">
    <section class="productos">
        <%# <div class="box">
            <%= form_tag facturas_path, :method => 'get' do %
                <p>
                    <%= text_field_tag :search, params[:search] %
                    <%= submit_tag "Buscar", :id => nil  %
                </p>
            <% end %
        </div> %>

        <div class="buscador_client">
          <div class="prueba_client">
            <%= form_tag facturas_path, :method => 'get' do %>
              <%= text_field_tag :search, params[:search], placeholder: "Buscar"%>
              <div class="btn_buscar_client">
                <button class="btn_borrar">
                  <%= image_tag "iconos/buscar_blanco", :referencia_pro => nil, class: "logoBuscar_client" %>
                </button>
              </div>
            <% end %>
          </div>
        </div>

        <h1 class="clientes__titulo">Facturas</h1>
        <div class="clientes__nuevo">
            <%= link_to new_factura_url do %>
                <p>Nuevo</p>
            <% end %>
        </div>
    </section>

  <section class="clientesTable">
    <table>
      <thead>
        <tr>
          <th><%= sort_link(@q, :fref,"N° Factura ", default_order: :desc, class:"white") %></th>
          <th><%= sort_link(@q, :client_nombre_cli," Nombre", default_order: :desc, class:"white") %></th>
          <th><%= sort_link(@q, :client_correo_cli,"Correo", default_order: :desc, class:"white") %></th>
          <th><%= sort_link(@q, :created_at,"Fecha de creación", default_order: :desc, class:"white")%></th>
          <th colspan="3">Acción</th>
        </tr>
      </thead>
      <tbody>
        <%= render @facturas %>
      </tbody>

    </table>
  </section>
  <div class="digg_pagination">
    <%= will_paginate(@facturas,:previous_label => "&laquo;", :next_label => "&raquo;",:class=>"small-font",:outer_window => 1,:inner_window => 0) %>
  </div>
</main>