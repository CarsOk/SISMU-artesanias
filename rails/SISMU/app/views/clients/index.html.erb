<main class="container">
  <section class="containerInfo">
    <%# image_tag("iconos/usuarios", class: "icon_logo_title") %>
    <%# <a class="containerInfo__boton" href="clients/new">nuevo</a> %>
    <div class="box">
      <form class="container-4">
        <span class="icon"><%= image_tag("iconos/buscar", class:"icon") %></span>
        <input name="q" <%= @q %> type="search" id="search" placeholder="Buscar..." />
      </form>
    </div>
    <h1 class="containerInfo__titulo">Clientes</h1>
    <div class="icon_nuevo">
      <%= link_to "clients/new" do %>
        <span>Nuevo</span>
        <%= image_tag("iconos/mas", class: "icon_mas") %>
      <% end %>
    </div>
  </section>
  <section class="containerTable">
    <table>
      <thead>
        <tr>
          <th>Cedula</th>
          <th>Primer Nombre</th>
          <th>Segundo Nombre</th>
          <th>Primer Apellido</th>
          <th>Segundo Apellido</th>
          <th>Teléfono</th>
          <th>Correo</th>
          <th>Dirección</th>
          <th colspan="3">Acción</th>
        </tr>
      </thead>
      <tbody>
        <%= render @clients%>
      </tbody>
    </table>
  </section>
  <div class="digg_pagination">
    <%= will_paginate(@clients,:previous_label => "&laquo;", :next_label => "&raquo;",:class=>"small-font",:outer_window => 1,:inner_window => 0) %>
  </div>
</main>