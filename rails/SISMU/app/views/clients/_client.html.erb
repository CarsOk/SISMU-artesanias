<tr>
    <td data-label="Cedula" class="centrar red">
        <%= client.id %>
    </td>
    <td data-label="Primer Nombre" class="centrar red">
        <%= client.nombre_cli %>
    </td>
    
    <td data-label="Primer Apellido" class="centrar red">
        <%= client.apellido_cli %>
    </td>
  
   
    <td data-label="Accion" class="botones red">
        <%= link_to client_url(client) do %>
        <button class="ver">Ver</button>
        <% end %>
        <%= link_to edit_client_url(client) do %>
        <button class="editar">Editar</button>
        <% end %>
        <%= button_to "Eliminar",client_path(client), method: :delete, class: "btn_borrar, eliminar", onclick: "return confirmDestroy('Â¿Deseas eliminar este cliente?')" %>
    </td>
</tr>

<script>
  function confirmDestroy(message) {
    if(!confirm(message)){
      return false
    }
  }
</script>