<div class="container_clientes">
  <h1 class ="container_clientes-text">Formulario de Clientes</h1>
  <div class="formulario_clientes">
    <%= simple_form_for @client do |f| %> <br>
      <%= f.label :id, label:"Cedula :"%>
      <%= f.input_field :id, class: 'input_clientes'%> <br> <br>
      <%= f.label :nombre_cli,"Nombre :"%>
      <%= f.input_field :nombre_cli, class: 'input_clientes' %><br><br>
      <%= f.label :nombre2_cli,"Segundo Nombre :"%>
      <%= f.input_field :nombre2_cli,  class: 'input_clientes2'   %><br><br>
      <%= f.label :apellido_cli,"Apellido :" %> 
      <%= f.input_field :apellido_cli, class: 'input_clientes' %> <br><br>
      <%= f.label :apellido2_cli,"Segundo Apellido :"%> 
      <%= f.input_field :apellido2_cli,class: 'input_clientes2' %> <br><br>
      <%= f.label :tel_cli,"Télefono :" %> 
      <%= f.input_field :tel_cli, class: 'input_clientes'%> <br><br>
      <%= f.label :correo_cli,"Correo Eléctronico :"%> 
        <%= f.input_field :correo_cli, class: 'input_clientes2'%> <br><br>
      <%= f.label :direccion_cli,"Dirección :"%>
      <%= f.input_field :direccion_cli,class: 'input_clientes' %> <br><br>
      <%= f.button :submit,"Crear", class:"formulario_boton"%><br>
    <% end %>
  </div>
</div>

