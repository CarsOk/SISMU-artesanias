<main class="container">
  <section class=" containerInfo">
    <%#image_tag("iconos/construccion", class: "icon_logo_title") %>
    <div class="box">
      <%= form_tag artesanos_path, :method => 'get' do %>
      <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Buscar", :id => nil  %>
      </p>
    <% end %>
    </div>
    <h1 class=" containerInfo__titulo">Artesanos</h1>
    <%# <a class=" containerInfo__boton" href="artesanos/new">Nuevo</a> %>
    <div class="icon_nuevo">
      <%= link_to "artesanos/new" do %>
        <span>Nuevo</span>
        <%= image_tag("iconos/mas", class: "icon_mas") %>
      <% end %>
    </div>
  </section>

  <section class="containerTable">
    <table>
      <thead>
        <tr>
          <th>Cedula</th>
          <th>Primer Nombre</th>
          <th>Segundo Nombre</th>
          <th>Primer Apelldio</th>
          <th>Segundo Apellido</th>
          <th>Telefono</th>
          <th colspan="3">Acci√≥n</th>
        </tr>
      </thead>
      <tbody>
        <%= render @artesanos%>
      </tbody>
    </table>
  </section>
  <div class="digg_pagination">
    <%= will_paginate(@artesanos,:previous_label => "&laquo;", :next_label => "&raquo;",:class=>"small-font",:outer_window => 1,:inner_window => 0) %>
  </div>
</main>